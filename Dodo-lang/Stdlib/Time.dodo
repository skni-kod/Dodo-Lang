type Timespec {
    let mut u64 s;
    let mut u64 ns;

    Timespec(let mut u64 seconds, let mut u64 nanoseconds) {
        this.s = seconds;
        this.ns = nanoseconds;
        return;
    }
}

i32 Sleep(let mut Timespec* duration, let mut Timespec* remaining) {
    return (syscall(35, duration, remaining)) convert i32;
}

i32 Sleep(let mut u64 seconds, let mut u64 nanoseconds) {
    let mut Timespec time = Timespec(seconds, nanoseconds);
    let mut Timespec rem = Timespec(seconds, nanoseconds);
    return Sleep(&time, &rem);
}
